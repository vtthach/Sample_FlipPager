<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sample.dynamic_pager_adapter">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        
        <activity android:name="dmt.hephaestus.sample.ui.activity.RootActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="dmt.hephaestus.sample.ui.activity.pager.ViewPagerActivity" />
        <activity android:name="dmt.hephaestus.sample.ui.activity.pager.SingleFlipPagerActivity" />
        <activity android:name="dmt.hephaestus.sample.ui.activity.pager.MultipleFlipPagerActivity" />
        <activity android:name="dmt.hephaestus.sample.ui.activity.pager.HorizontalPagerActivity" />
    </application>

</manifest>