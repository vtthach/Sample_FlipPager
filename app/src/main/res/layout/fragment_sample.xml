<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/card_padding_left"
    android:paddingRight="@dimen/card_padding_right">

    <FrameLayout
        android:layout_width="@dimen/default_card_width"
        android:layout_height="@dimen/default_card_height"
        android:layout_gravity="center"
        android:background="@drawable/bg_card_view_shadow">

        <FrameLayout
            android:id="@+id/fragment_sample_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/fragment_sample_lbl_index"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:gravity="center|center_horizontal|center_vertical"
                android:textSize="30dp" />
        </FrameLayout>
    </FrameLayout>
</FrameLayout>
